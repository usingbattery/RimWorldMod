<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- 栓动猎枪 -->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_BoltActionHuntingGun</defName>
    <label>栓动猎枪</label>
    <description>专为打猎设计的栓动猎枪，更安全，更高效，但低射击等级小人仍可能打不中。</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/BoltActionRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <weaponClasses>
      <li>LongShots</li>
    </weaponClasses>
    <statBases>
      <WorkToMake>12000</WorkToMake>
      <Mass>3.5</Mass>
	  <!-- 精度 -->
      <AccuracyTouch>0.55</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.85</AccuracyMedium>
      <AccuracyLong>1.00</AccuracyLong>
	  <!-- 冷却时间 -->
      <RangedWeapon_Cooldown>5</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <displayPriority>420</displayPriority>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_BoltActionHuntingGun</defaultProjectile>
		<!-- 瞄准时间 -->
        <warmupTime>0</warmupTime>
		<!-- 射程 -->
        <range>44.9</range>
        <soundCast>Shot_BoltActionRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <!-- 栓动猎枪子弹 -->
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_BoltActionHuntingGun</defName>
    <label>bolt-action rifle bullet</label>
    <projectile>
      <damageDef>Bullet</damageDef>
	  <!-- 伤害 -->
      <damageAmountBase>25</damageAmountBase>
      <stoppingPower>1.5</stoppingPower>
	  <!-- 穿甲 -->
      <armorPenetrationBase>0</armorPenetrationBase>
      <speed>70</speed>
    </projectile>
    <graphicData>
      <texPath>Things/Projectile/Bullet_big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>

  <!-- 泵动猎枪 -->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_PumpHuntingGun</defName>
    <label>泵动猎枪</label>
    <description>专为打猎设计的泵动猎枪，更高效，易命中，但不要用来狩猎能反击的动物！尤其是大体型动物，容易激怒动物导致危险。</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/Shotgun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <weaponClasses>
      <li>ShortShots</li>
    </weaponClasses>
    <weaponTags>
      <li>ShortShots</li>
    </weaponTags>
    <statBases>
      <WorkToMake>12000</WorkToMake>
      <Mass>3.4</Mass>
	  <!-- 精度 -->
      <AccuracyTouch>0.95</AccuracyTouch>
      <AccuracyShort>1.00</AccuracyShort>
      <AccuracyMedium>0.70</AccuracyMedium>
      <AccuracyLong>0.50</AccuracyLong>
	  <!-- 冷却时间 -->
      <RangedWeapon_Cooldown>3.35</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <displayPriority>435</displayPriority>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_HuntingGun</defaultProjectile>
		<!-- 瞄准时间 -->
        <warmupTime>0</warmupTime>
		<!-- 射程 -->
        <range>2.9</range>
        <soundCast>Shot_Shotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <!-- 泵动猎枪子弹 -->
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_HuntingGun</defName>
    <label>shotgun blast</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Shotgun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
	  <!-- 伤害 -->
      <damageAmountBase>30</damageAmountBase>
      <stoppingPower>3</stoppingPower>
	  <!-- 穿甲 -->
      <armorPenetrationBase>0</armorPenetrationBase>
      <speed>55</speed>
    </projectile>
  </ThingDef>

</Defs>
